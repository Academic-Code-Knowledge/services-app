<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Facturas</h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>Orden</th>
            <th>dni</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>email</th>
            <th>Direcci√≥n</th>
            <th>Fecha</th>
            <th>Sub total</th>
            <th>IVA</th>
            <th>Total</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @invoices.each do |invoice| %>
            <tr>
              <td><%= invoice.order_id %></td>
              <td><%= invoice.order.user.dni %></td>
              <td><%= invoice.order.user.first_name %></td>
              <td><%= invoice.order.user.last_name %></td>
              <td><%= invoice.order.user.email %></td>
              <td><%= invoice.order.user.address %></td>
              <td><%= invoice.date %></td>
              <td><%= invoice.sub_total %></td>
              <td><%= invoice.tax %></td>
              <td><%= invoice.total %></td>
              <td><%= link_to 'Show', invoice %></td>
              <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
              <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>    
    </div>
    <div class="panel-footer">
    <%= link_to 'Nueva Factura', new_invoice_path, class: "btn btn-primary" %>
    </div> 
  </div> 
</div> 


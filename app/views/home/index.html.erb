<div class='container'>
    <div class="card col-md-6">
            <div class="card-body"> 
                <h2 class="card-title d-flex justify-content-between mb2">
                    <span>Resumen</span>
                </h2>  
                <div class='table-responsive'>
                    <table class="table table-primary table-striped table-bordered table-condensed">
                        
                            <tr>
                                <td>
                                    <h5>Cantidad de ingresos</h5>
                                </td>
                                <td>
                                    <h6><%= current_user.ingresos %></h6>  
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h5>Cantidad de Egresos</h5>
                                </td>
                                <td>
                                    <h6><%= current_user.egresos %></h6>
                                </td>
                            </tr>
                          
                    </table>
                </div>
            </div>
        </div>
        <br>
        <br>
        <div class="card">
            <div class="card-body"> 
                <h2 class="card-title d-flex justify-content-between mb2">
                    <span>Listado de Servicios</span>
                </h2>  
                <div class='table-responsive-sm'>
                    <table class="table table-bordered">
                        <thead class='table-primary'>
                            <tr>
                            <th scope="col">Número de orden</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Descripción</th>
                            <th scope="col">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                           <% @orders.each do |order|  %>
                                    <tr>
                                        <td><%= order.id  %></td>
                                        <td><%= order.service.name %></td>
                                        <td><%= order.issue_description %></td>
                                        <td><%= order.status %></td>                                
                                        <td> <%= link_to 'Tracking', admin_home_index_path,  class: 'btn btn-success btn-sm' %></td>
                                        <td> <%= link_to 'Factura', invoices_path, method: :get , class: 'btn btn-primary btn-sm' %></td>
                                    </tr>
                                
                            <% end %>
                        </tbody>              
                        
                    </table>
                </div>
            </div>
        </div>
    </div> 
</div>

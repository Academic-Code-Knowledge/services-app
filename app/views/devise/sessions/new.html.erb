<div class="container p-5 ">
  <div class="container-fluid" style="max-width: 500px">
    <div class="text-center">
      <h2>Inicio de Sesión</h2>
    </div>
    <br />    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label "Ingrese su correo" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width:100%' %>
      </div>
      <br />
      <div class="field">
        <%= f.label "Ingrese su contraseña" %><br />
        <%= f.password_field :password, autocomplete: "current-password", style: 'width:100%' %>
      </div>
      <br />
      <div class="actions mt-3">
        <%= f.submit "Iniciar Sesión", style: 'width:100%; height:40px', class: "rounded-pill border-1 btn-primary" %>
      </div>
      <div class="actions mt-3">
        <%= link_to "Cancelar", home_landing_path, class:"btn btn-dark rounded-pill border-1" ,style:'width:100%;height:40px'  %>
      </div>
    <% end %>
  </div>
</div>
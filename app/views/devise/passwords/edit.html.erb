<div class="card text-center">
  <div class="card-header">
    <h4>Recuperaci√≥n de password</h4>
  </div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
      <div class="card-body">
        <h5 class="card-title"><%= f.label :password, "Ingrese su nueva password" %></h5>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>        
        <p class="card-text"><%= f.password_field :password, autofocus: true, autocomplete: "password" %></p>
        <h5 class="card-title"><%= f.label :password_confirmation, "Repita su nueva password" %></h5>
        <p class="card-text"><%= f.password_field :password_confirmation, autocomplete: "password" %></p>
        <button type="button" class="btn btn-success"><%= f.submit "Confirmar" %></button>
        <button type="button" class="btn btn-success"><%= link_to "Volver", root_path %></button>
      </div>
      <div class="card-footer text-muted">
        <h5><%= render "devise/shared/links" %></h5>
      </div>
  <% end %>  
</div>

<!DOCTYPE html>
<html>
  <head>
    <title>ServicesApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>
  <body class="d-flex flex-column h-100">  
    <!-- Navbar sup to Guess User-->
    <% if !user_signed_in? %> 
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Techno Service</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Nosotros</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#" tabindex="-1" aria-disabled="true">Servicios</a>
              </li>
            </ul>
            <div class="d-flex">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/users/sign_in">Login</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>      
    <% end %>

    <div class="container">
      <div class="row">
        <div class="col">
          <%= yield %>
        </div>
      </div>  
    </div>
        <!-- 
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        -->
    <!-- Footer to Guess User -->
    <% if !user_signed_in? %>
      <footer class="w-100 bg-dark text-white mt-auto mb-0 p-0">
        <div class="row text-center pt-3">
          <div class="col-xs-12 col-sm-4 col-md-4">
            <h5>Contactenos</h5>
            <ul class="list-unstyled quick-links">
              <li><a  class="fa fa-angle-double-right"></i>sercivesapp@mail.com</a></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4 col-md-4">
            <h5>Direcci√≥n</h5>
            <ul class="list-unstyled quick-links">
              <li><a  class="fa fa-angle-double-right"></i>Los Leones 456, Providencia</a></li>	
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4 col-md-4">
            <h5>Telefono</h5>
            <ul class="list-unstyled quick-links">
              <li><a <i class="fa fa-angle-double-right"></i>56 2 224587956</a></li>
              <li><a  class="fa fa-angle-double-right"></i>56 9 485247865</a></li>
            </ul>
            </div>	
          </div>	
        </div>
      </footer>
    <% end %>
    <!-- Menu botton to User sign -->
    <% if user_signed_in? %>
      <nav class="navbar fixed-bottom navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
          
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="navbar-text">
                <%= link_to "Home", home_index_path, method: :get %>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Usuarios</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Servicios</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Equipos</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Facturas</a>
              </li>   
            </ul>
            <span class="navbar-text">
              <%= link_to "Logout", destroy_user_session_path, method: :delete %>
            </span>
          </div>
        </div>
      </nav>
    <%end%>
<body>
</html>

  <%# Codigo Vista Operador %>
  <div class="col-lg-12">
    <h1>Operaciones</h1>
    <div class="col col-lg-12 ">
      <table class="table ml-2">
        <thead>
          <tr>
            <th scope="col">Orden_ID</th>
            <th scope="col">Description</th>
            <th scope="col">Reception Date</th>
            <th scope="col">Stage</th>
            <th scope="col">Service</th>
            <th scope="col">Advance</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order|%>
            <tr>
              <td style='width: 300px, text-align: center'><%= order.id%></td>
              <td style='width: 300px, text-align: center'><%= order.issue_description%></td>
              <td style='width: 300px, text-align: center'><%= order.date_in%></td>
              <td style='width: 300px, text-align: center'><%= order.stage_count(order.id)%></td>
              <td style='width: 300px, text-align: center'><%= order.name_service(order.id)%></td>
              <td style='width: 300px, text-align: center'><%= %> 0 %</td>
              <td>
                <%= link_to "Operar", {:action => :procesar, :id => order.id}, :class => 'btn btn-success btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

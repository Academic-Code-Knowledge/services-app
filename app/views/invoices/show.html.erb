<p id="notice"><%= notice %></p>
<div class="container-md">
  <div class="page-header">
    <h2>Factura N째</h2>
  </div>
  <div class="row">
    <div class="col-sm-2">RUT</div>
    <div class="col-sm-8">Raz처n Social</div>
    <div class="col-sm-2">N째 Orden</div>
  </div>
  <div class="row">
    <div class="col-sm-2"><textarea class="form-control" rows="1"><%= @invoice.order.user.dni %></textarea></div>
    <div class="col-sm-8"><textarea class="form-control" rows="1"><%= @invoice.order.user.first_name+' '+@invoice.order.user.last_name %></textarea></div>
    <div class="col-sm-2"><textarea class="form-control" rows="1"><%= @invoice.order_id %></textarea></div>
  </div>
  <div class="row">
    <div class="col-sm-6">Direcci처n</div>
    <div class="col-sm-4">Email</div>
    <div class="col-sm-2">Fecha</div>    
  </div>
  <div class="row">
    <div class="col-sm-6"><textarea class="form-control" rows="1"><%= @invoice.order.user.address %></textarea></div>
    <div class="col-sm-4"><textarea class="form-control" rows="1"><%= @invoice.order.user.email %></textarea></div>
    <div class="col-sm-2"><textarea class="form-control" rows="1"><%= @invoice.date %></textarea></div>    
  </div>
  <div class="row">
    <div class="col-sm-10">Servicio</div>
    <div class="col-sm-2">Valor [$]</div>
  </div>
  <div class="row">
    <div class="col-sm-10"><textarea class="form-control" rows="4"><%= @invoice.order.issue_description %></textarea></div>
    <div class="col-sm-2"><textarea class="form-control" rows="4"><%= @invoice.order.service.amount %></textarea></div>
  </div>
  <div class="row">
    <div class="col-sm-10"><textarea class="form-control" rows="1">Subtotal</textarea></div>
    <div class="col-sm-2"><textarea class="form-control" rows="1"><%= @invoice.sub_total %></textarea></div>
  </div>
  <div class="row">
    <div class="col-sm-10"><textarea class="form-control" rows="1">IVA</textarea></div>
    <div class="col-sm-2"><textarea class="form-control" rows="1"><%= @invoice.tax %></textarea></div>
  </div>
  <div class="row">
    <div class="col-sm-10"><textarea class="form-control" rows="1">Total</textarea></div>
    <div class="col-sm-2"><textarea class="form-control" rows="1"><%= @invoice.total %></textarea></div>
  </div>
  <div class="panel-footer">
    <div class="btn-group">
      <%= link_to 'Edit', edit_invoice_path(@invoice), class: "btn btn-danger" %> |
      <%= link_to 'Back', invoices_path, class: "btn btn-warning" %>
      <div class="col-sm-4"><button type="button" class="btn btn-primary">Enviar</button></div>
    </div>
  </div>
</div>

